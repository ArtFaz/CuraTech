<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_2_curatech_sem_banding">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#210c44"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curativos"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewImagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="250dp"
                        android:layout_height="133dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/curativos" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bota de Unna"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uma bandagem impregnada com ingredientes como óxido de zinco e glicerina, usada para cobrir feridas decorrentes de insuficiência venosa. Auxilia no retorno venoso, reduz o edema e exsudato, além de promover a cicatrização. Contraindicada para úlcera arterial e pacientes hipersensíveis aos componentes."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gaze com Soro Fisiológico 0,9%"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gaze umedecida com soro fisiológico para promover um ambiente úmido na lesão, estimulando a cicatrização. Não indicada para feridas que cicatrizam por primeira intenção ou com excesso de exsudato."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rayon Cobertura não-aderente"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Um tecido em malha utilizado como cobertura primária em feridas agudas ou crônicas para proteger o tecido de granulação. Não deve ser usado em tecido desvitalizado."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ácido Graxo Essencial - AGE"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Óleo vegetal utilizado como cobertura primária para tratar feridas agudas ou crônicas, promovendo um ambiente úmido e acelerando a cicatrização. Contraindicado para tecido desvitalizado, hipergranulação, lesões infectadas ou feridas oncológicas."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hidrocolóide em Placa"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curativo recortável composto por hidrocolóide utilizado para lesões com pouco a médio exsudato. Protege as terminações nervosas, mantém a umidade e estimula a angiogênese e o tecido de granulação."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hidrogel com ou sem alginato de cálcio e sódio"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curativo utilizado em feridas com pouca exsudação ou secas, criando um ambiente úmido que estimula a cicatrização. Indicado para várias lesões, como úlceras venosas e úlceras por pressão."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hidrofibra sem prata"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curativo absorvente utilizado em úlceras por pressão, úlceras diabéticas, feridas operatórias e queimaduras de segundo grau. Auxilia no desbridamento autolítico e possui alta capacidade de absorção de exsudato."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hidrofibra com prata (Ag)"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cobertura primária utilizada em várias feridas, com propriedades bactericidas e fungicidas devido à liberação controlada da prata."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curativo Hidroalgenato de Cálcio com Prata"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cobertura primária composta por alginato de cálcio, carboximetilcelulose e prata. Absorve o exsudato, controla a atividade microbiana e promove a hemostasia."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curativo Hidropolímero/Espuma não adesivo"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cobertura primária para feridas agudas ou crônicas, mantendo um ambiente úmido favorável à cicatrização e controlando o exsudato."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
