<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo_curatech_sem_banding"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/dashboard"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Olá, seja bem-vindo ao CuraTech!"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Um aplicativo informativo desenvolvido com o intuito de passar conhecimento importante sobre feridas, suas causas e quais tipos de curativos podem ser utilizados para tratá-las."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como Funciona o APP?"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nosso aplicativo categoriza os tipos de feridas por meio dos agentes causais. São 8 categorias para feridas e uma página dedicada para curativos e afins. Por meio da barra de navegação inferior, é possível acessar as informações."
                        android:textColor="#202020"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desenvolvimento do Aplicativo"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\nDocentes\n"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_content4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Elvio Gilberto da Silva\nDra. Marcia Aparecida Nuevo Gatti (Professora Colaboradora)"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_content5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\nDiscentes\n"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_content6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ana Paula Raduan da Cunha\nArthur Bonifácio Fazioni\nLucas Fernandes Foganholi\nMurilo Takahashi\nPedro Acácio Medina Bassan\n"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_content7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\nCurso:\n"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ciencia_da_computacao2"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />


                    <TextView
                        android:id="@+id/text_content8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\nApoio:\n"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ciencia_da_computacao___corrigido"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/iniciar"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
        android:layout_width="205.5dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Início"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dashboard"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="205.5dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Categorias"
        android:textColor="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>